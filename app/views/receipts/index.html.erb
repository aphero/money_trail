<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Datetime</th>
      <th>Store</th>
      <th>Payment method</th>
      <th>Order number</th>
      <th>Total</th>
      <th>Currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.datetime %></td>
        <td><%= receipt.store_id %></td>
        <td><%= receipt.payment_method %></td>
        <td><%= receipt.order_number %></td>
        <td><%= receipt.total %></td>
        <td><%= receipt.currency %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %><br/>
